<h4 style="font-family:cursive;text-align: center;">User Address All Data </h4>
<table class="table table-striped table-hover">
  <thead class="table-info">
    <tr>
      <th scope="col">Street Address</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Country</th>
      <th scope="col">Pincode</th>
      <!-- <th scope="col">User_id</th> -->
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% (0...@address.length).each_with_index do |element, index| %>
  <%=index%> |
<% end %>
  	<% @address.each do |add|%>
    <tr>
      <td><%=add.street_address%></th>
      <td><%=add.city%></td>
      <td><%=add.state%></td>
      <td><%=add.country%></td>
      <td><%=add.pin_code%></td>
      <!-- <td><%#=current_user.id%></td> -->
      <td><%= link_to "Show",address_path(add.id),class:"btn btn-primary"%></td>
       <td><%= link_to "Edit",edit_address_path(add.id),class:"btn btn-primary"%></td>
        <td><%= link_to "Delete",address_path(add.id),method: :delete ,data: {Confirm:"Are You Soure ?"},class:"btn btn-danger"%></td>
    </tr>
    <%end%>
  </tbody>
</table>

