<style>
  .txt
  {
    height: 45px;
  }
</style>
<div class="container">
<div class="row">
<div class="col-sm-3"></div>
<div class="col-sm-6" style="margin: 10px;">
<h3 style="font-family: cursive;text-align: center;">Show <b style="color: maroon;">address</b></h3>
  <%= form_for @address do |f|%>
    <%=f.label :street_address%>
    <%=f.text_field :street_address,class:"form-control txt"%>
    <%=f.label :city%>
    <%=f.text_field :city,class:"form-control txt"%>
    <%=f.label :state%>
    <%=f.text_field :state,class:"form-control txt"%>
    <%=f.label :country%>
    <%=f.text_field :country,class:"form-control txt"%>
    <%=f.label :pincode%>
    <%=f.text_field :pin_code,class:"form-control txt"%>
    <%#=f.label :user_id%>
    <%=f.hidden_field :user_id, value: current_user.id, class:"form-control txt"%>
    <%=f.submit "Update",class:"btn btn-primary",style:"margin-top:10px; height:50px;"%>
  <%end%>
</div>
</div>
</div>
